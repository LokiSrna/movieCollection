<div class="card-header">
  <div class="row">
    <div class="col-sm-10">
      <h1 class="px-3"><%= title %></h1>
    </div>
    <div class="col-sm-2 float-right">
      <a href="add/" class="btn btn-secondary">Add New</a>
    </div>
  </div>
</div>
<div class="card-body">
  <table class="table responsive">
    <thead>
      <tr>
        <th class="text-center">S.No</th>
        <th class="text-center">Movie Name</th>
        <th class="text-center">Rating</th>
        <th class="text-center">Cast</th>
        <th class="text-center">Genere</th>
        <th class="text-center">Release Date</th>
        <th class="text-center">Action</th>
      </tr>
    </thead>
    <tbody>
      <% if(!movieList.length) { %>
        <tr>
          <td class="text-center" colspan="7">No data found</td>
        </tr>
      <% } else{ let i=1 %>
        <%
          movieList.forEach(item=> { %>
            <tr>
              <th class="text-center">
                <%= i++ %>
              </th>
              <th class="text-center">
                <%= item.name %>
              </th>
              <th class="text-center">
                <%= item.rating %>
              </th>
              <th class="text-center">
                <% item.cast.forEach(castList => { %>
                  <%= castList.name %>,
                <% }) %>
              </th>
              <th class="text-center">
                <%= item.genere %>
              </th>
              <th class="text-center">
                <%= item.releaseDate %>
              </th>
              <th class="text-center">
                <a href="edit/<%= item.id %>" class="btn btn-primary">Edit</a>
                <a href="delete/<%= item.id %>" class="btn btn-danger">Delete</a>
              </th>
            </tr>
        <%  }) } %>
    </tbody>
  </table>
</div>